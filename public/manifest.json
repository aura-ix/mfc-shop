{
  "manifest_version": 3,
  "name": "MFC Shopper",
  "description": "Easily search for your favorite figures listed on MyFigureCollection on common proxy services!",
  "version": "1.0",
  "icons": {
    "48": "generated/logo48.png",
    "128": "generated/logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "generated/logo128.png"
      ],
      "matches": [
        "https://myfigurecollection.net/*"
      ],
      "use_dynamic_url": true
    }
  ],
  "content_scripts": [
    {
      "js": [
        "main.js"
      ],
      "matches": [
        "https://myfigurecollection.net/*"
      ]
    }
  ]
}