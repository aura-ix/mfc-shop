{
  "manifest_version": 3,
  "name": "MFC Shop",
  "description": "Base Level Extension",
  "version": "1.0",
  "icons": {
      "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://myfigurecollection.net/*"],
      "use_dynamic_url": true
    }
  ],
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": ["https://myfigurecollection.net/*"]
    }
  ]
}